<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <payment>
            <razorpay>
                <payment_action>authorize</payment_action> <!-- You can use another method custompayment -->
                <model>Elightwalk\Razorpay\Model\PaymentMethod</model>
